{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=medical_records_dev.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "FileStorage": {
    "BasePath": "uploads",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png"]
  },
  "Authentication": {
    "CookieName": "MedicalRecordsAuth",
    "ExpireTimeSpan": "1.00:00:00"
  }
}
